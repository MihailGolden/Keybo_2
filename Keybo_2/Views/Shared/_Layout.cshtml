<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Keybotrain</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")




</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Keybotrain", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Обучение", "Learning", "Home")</li>
                    <li>@Html.ActionLink("Моя страница", "About", "Home")</li>
                    <li>@Html.ActionLink("Рейтинг", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    @RenderBody()

    <nav class="navbar-fixed-bottom navbar-inverse">
        <div class="row  text-center">
            <div class="col-md-3">
                <p>&copy; @DateTime.Now.Year - Keybotrain</p>
            </div>
            <div class="col-md-3">
                info@keybotrain.com
            </div>
            <div class="col-md-3">
                <a href="http://vk.com/keybotrain" target="_blank" onclick="$('#intext').focus();"><img src="https://vk.com/images/vk16.png" alt="" style="width:16px; height:16px; vertical-align:central; margin-right:5px;" />Группа в VK</a>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-2">
                <!-- counter.1Gb.ua -->
                <script language="javascript" type="text/javascript">
                    cgb_js = "1.0"; cgb_r = "" + Math.random() + "&r=" +
                    escape(document.referrer) + "&pg=" +
                    escape(window.location.href);
                    document.cookie = "rqbct=1; path=/"; cgb_r += "&c=" +
                    (document.cookie ? "Y" : "N");
                </script>
                <script language="javascript1.1" type="text/javascript">
                    cgb_js = "1.1"; cgb_r += "&j=" +
                    (navigator.javaEnabled() ? "Y" : "N")</script>
                <script language="javascript1.2" type="text/javascript">
                    cgb_js = "1.2"; cgb_r += "&wh=" + screen.width +
                    'x' + screen.height + "&px=" +
                    (((navigator.appName.substring(0, 3) == "Mic")) ?
                    screen.colorDepth : screen.pixelDepth)</script>
                <script language="javascript1.3" type="text/javascript">
                    cgb_js = "1.3"</script>
                <script language="javascript"
                        type="text/javascript">
                    cgb_r += "&js=" + cgb_js;
                    document.write("<a href='http://www.1Gb.ua?cnt=19292'>" +
                    "<img src='http://counter.1Gb.ua/cnt.aspx?" +
                    "u=19292&" + cgb_r +
                    "&' border=0 width=50 height=24 " +
                    "alt='1Gb.ua counter'><\/a>")</script>
                <noscript>
                    <a href='http://www.1Gb.ua?cnt=19292'>
                        <img src="http://counter.1Gb.ua/cnt.aspx?u=19292"
                             border=0 width="50" height="24" alt="1Gb.ua counter">
                    </a>
                </noscript>
                <!-- /counter.1Gb.ua -->
            </div>
        </div>
    </nav>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
